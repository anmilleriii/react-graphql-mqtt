{
    "private": true,
    "workspaces": [
        "packages/*"
    ],
    "scripts": {
        "doc": "yarn --cwd packages/web doc",
        "dev": "yarn --cwd packages/web dev",
        "storybook": "yarn --cwd packages/web storybook",
        "build": "yarn --cwd packages/web build",
        "preview": "yarn --cwd packages/web preview",
        "test": "yarn --cwd packages/web test",
        "server": "yarn --cwd packages/server start",
        "generate": "yarn --cwd packages/server generate",
        "mock": "cd packages/mock && python3 publisher.py && cd -",
        "coverage": "yarn --cwd packages/web coverage"
    },
    "license": "Apache-2.0"
}
